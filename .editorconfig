# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2

[*.py]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

[Makefile]
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 4


[*.yml]
indent_style = space
indent_size = 2

[*.j2]
indent_style = space
indent_size = 2
